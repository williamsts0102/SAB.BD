CREATE TABLE tblAlerta (
    intIdAlerta INTEGER PRIMARY KEY IDENTITY(1,1),
    strCodAlerta INTEGER,
	strCodEstado VARCHAR(15),
    strDepartamento VARCHAR(20),
    strProvincia VARCHAR(20),
    strDistrito VARCHAR(20),
    strDireccion VARCHAR(50),
    strLatitud VARCHAR(200),
    strLongitud VARCHAR(200),
	intIdConductor INTEGER,
	intIdVehiculo INTEGER,
	dtmFechaAtencion DATETIME,
    bitEstado BIT,
    bitActivo BIT,
    bitEliminado BIT,
    intIdUsuarioRegistro INTEGER,
    dtmFechaRegistro DATETIME,
    intIdUsuarioModificacion INTEGER,
    dtmFechaModificacion DATETIME,
    intIdUsuarioEliminacion INTEGER,
    dtmFechaEliminacion DATETIME,
	FOREIGN KEY (intIdSolicitudTransporte) REFERENCES tblSolicitudesTransporte(intIdSolicitudTransporte),
	FOREIGN KEY (intIdConductor) REFERENCES tblConductores(intIdConductor),
	FOREIGN KEY (intIdVehiculo) REFERENCES tblVehiculos(intIdVehiculo)
);/**/